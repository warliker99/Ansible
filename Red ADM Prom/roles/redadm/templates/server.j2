[BASE_SETTINGS]
; Main RedAdm settings
CERT_PATH = /opt/redadm/configs/ssl/redadm-server.crt
SECRET_KEY = None
DEFAULT_SSH_USER = root
JWT_ACCESS_EXPIRATION_SECONDS=3600
JWT_REFRESH_EXPIRATION_SECONDS=7200

[DATABASE]
; Database connection settings
DB_HOST = {{ ansible_default_ipv4.address }}
DB_PORT = 3050
DB_NAME = /db/redadm_db.fdb
DB_USER = redadm
DB_PASSWORD = redadm

[LDAP]
; LDAP connection settings
LDAP_URL = ldaps://{{ hostname_dc }}:636
LDAP_DOMAIN_NAME = {{ ansible_domain }}
LDAP_DC_END = {{ dn_domain }}
USERNAME_LDAP = Administrator
PASSWORD_LDAP = {{ administrator_domain_password }}
LDAP_PAGE_SIZE = 1000

[SYSLOG]
; If you want use your syslog server comment DEFAULT /dev/log
; further set and uncomment IP and PORT variable
; REMEMBER! You need to set at least one syslog backend if syslog is enable!!!
SYSLOG_ENABLE = True
SYSLOG_DEFAULT = /dev/log
# SYSLOG_IP = 10.10.1.3
# SYSLOG_PORT = 514

[OTHER]
PULL_NUMBER_TASKS = 100

[DOWNLOAD_REDADM]
PATH_DOWNLOAD_REDADM = /var/www
NAME_FILE_RPM = redadm-enterprise-1.0.0-6.el7.x86_64.rpm

[DOWNLOAD_SAMBA]
PATH_FILE_SAMBA_RPM = /var/www/samba-dc-x86_64.rpm
